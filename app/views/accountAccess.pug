doctype html
html
	head
		script(src='https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js')
		link(rel='stylesheet', href='/css/external.css')
		script(src='/js/identification.js')

		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css')

		//JavaScripts
		//For stuff like buttons, dropdowns, etc.
		script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js')
		script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
		script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')

		title Log In | Sign Up

		//Determines the outcome of the form
		//One way to send json object from the backend server to the frontend external javascript
		script.
			initializedHTML(`#{form}`, `#{warning}`)

	body
		div(class='col-lg-10 mx-auto')
			div(class='row')
				div(class='col-lg-8')
					h1 VideoShare
				div(class='col-lg-4' style='background-color: #cfd8dc')
					div(class='container-fluid' id='view_template')

	//Handlebar
	script(id='signUp' type='text/x-handlebars-template')
		div(class='row')
			div(class='col-lg-12' id='view_warning')
		div(class='row')
			div(class='col-lg-12')
				h2 Create Account
		div(class='row')
			div(class='col-lg-12')
				form(role='form' action='/accountAccess' method='POST')
					div(class='form-group')
						label(for='Name') Display Name:
						input(type='text' class='form-control' id='Name' name='name' required)
					div(class='form-group')
						label(for='User') Username:
						input(type='text' class='form-control' id='User' name='user' required)
					div(class='form-group')
						label(for='Pass') Password:
						input(type='password' class='form-control' id='Pass' name='pass' required)
					div(class='form-row')
						div(class='col')
							button(style='margin-bottom: 5px;' type='submit' name='submit') Create Account
						div(class='col')
							span(onclick='changeForm("#login")') Sign in

	script(id='login' type='text/x-handlebars-template')
		div(class='row')
			div(class='col-lg-12' id='view_warning')
		div(class='row')
			div(class='col-lg-12')
				h2 Log In
		div(class='row')
			div(class='col-lg-12')
				form(role='form' action='/accountAccess' method='POST')
					div(class='form-group')
						label(for='User') Username:
						input(type='text' class='form-control' id='User' name='user' required)
					div(class='form-group')
						label(for='Pass') Password:
						input(type='password' class='form-control' id='Pass' name='pass' required)
					div(class='form-row')
						div(class='col')
							button(style='margin-bottom: 5px;' type='submit' name='submit') Login
						div(class='col')
							span(onclick='changeForm("#signUp")') Create account

	script(id='warning' type='text/x-handlebars-template')
		span {{note}}