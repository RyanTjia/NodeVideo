doctype html
html
	//Uses a different .pug file to fill out the header
	include layouts/dashhead.pug

	head
		script(src='https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js')
		script(src='/js/videoConfirmation.js')

	body
		include layouts/dashnav.pug

		div(class='row')
			div(class='col-lg-8 mx-auto')
				form(role='form' action='/upload' method='POST')
					div(class='form-row')
						div(class='col')
							label(for='Title') Title
							input(type='text' class='form-control' id='Title' name='title' required)
						div(class='col')
							label(for='Link') Link
							input(type='text' class='form-control' id='Link' name='link' onkeyup='showVid()' required)
					div(class='form-group')
						label(for='Desc') Description
						textarea(class='form-control' id='Desc' name='desc')
					button(type='submit' name='submit') Upload Video
		div(class='row')
			div(id='view_template' class='col-lg-8 mx-auto')

	//Handlebar
	script(id='previewVid' type='text/x-handlebars-template')
		div(class='row' style='margin-top: 10px;')
			div(class='col-lg-12')
				span Video Preview
		div(class='row')
			div(class='col-lg-12')
				iframe(width='100%' height='100%' src='{{Link}}' frameborder='0' allowfullscreen)
		div(class='row')
			div(class='col-lg-12')
				span(onclick='videoHelp()') Video not available?